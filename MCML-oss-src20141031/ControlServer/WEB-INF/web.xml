<?xml version="1.0" encoding="ISO-8859-1"?>
<!DOCTYPE web-app PUBLIC "-//Sun Microsystems, Inc.//DTD Web Application 2.2//EN" "http://java.sun.com/j2ee/dtds/web-app_2.2.dtd">
<web-app>
	<servlet>
		<servlet-name>ControlServer</servlet-name>
		<servlet-class>jp.go.nict.mcml.servlet.control.ControlServer</servlet-class>
	</servlet>
	<servlet-mapping>
		<servlet-name>ControlServer</servlet-name>
		<url-pattern>/ControlServer</url-pattern>
		<url-pattern>/ControlServer/*</url-pattern>
	</servlet-mapping>
	<listener>
		<listener-class>jp.go.nict.mcml.engine.socket.SocketEngineCtrl</listener-class>
	</listener>
	<session-config>
		<session-timeout>1440</session-timeout>
	</session-config>
	<error-page>
		<error-code>800</error-code>
		<location>/error.html</location>
	</error-page>


	<filter>
		<filter-name>NdcFilter</filter-name>
		<filter-class>jp.go.nict.mcml.com.NdcFilter</filter-class>
	</filter>

	<filter-mapping>
		<filter-name>NdcFilter</filter-name>
		<url-pattern>/*</url-pattern>
	</filter-mapping>


</web-app>